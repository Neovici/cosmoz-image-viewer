{
	"plugins": {
		"local": {
			"browsers": ["chrome", "firefox"],
			"browserOptions": {
				"chrome": [
					"headless",
					"disable-gpu",
					"no-sandbox"
				],
				"firefox": [
					"--headless"
				]
			}
		},
		"istanbul": {
			"dir": "./coverage",
			"reporters": ["text-summary", "lcov"],
			"include": [
				"**/cosmoz-**.js",
				"**/lib/**/*.js"
			],
			"exclude": []
		}
	}
}
