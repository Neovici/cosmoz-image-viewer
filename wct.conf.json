{
	"plugins": {
		"local": {
			"browsers": ["chrome"],
			"browserOptions": {
				"chrome": [
					"headless",
					"disable-gpu",
					"no-sandbox"
				]
			}
		},
		"istanbul": {
			"dir": "./coverage",
			"reporters": ["text-summary", "lcov"],
			"include": [
				"cosmoz-image-viewer-overlay.html",
				"cosmoz-image-viewer.html",
				"cosmoz-image-viewer.js"
			],
			"exclude": []
		}
	}
}
